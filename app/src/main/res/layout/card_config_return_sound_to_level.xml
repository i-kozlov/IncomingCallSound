<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:orientation="vertical"
              android:layout_width="match_parent"
              android:layout_height="match_parent">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        >

        <TextView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="@string/return_volume_toggle_text"
            android:textSize="16sp"/>

        <android.support.v7.widget.SwitchCompat
            android:id="@+id/return_level_toggle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="end"/>
    </LinearLayout>

    <TextView
        android:id="@+id/return_sound_description"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/return_level_false_description"
        android:textSize="12sp"/>

    <SeekBar
        android:id="@+id/return_level_seekBar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        />

</LinearLayout>